<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F3F3F3"
    android:orientation="horizontal" >

    <RadioGroup
        android:id="@+id/rb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/rb_home"
            android:gravity="center_horizontal"
            android:text="主页"
            android:textColor="@drawable/textcolor"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_notifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_notifi"
            android:gravity="center_horizontal"
            android:text="通知"
            android:textColor="@drawable/textcolor"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_search"
            android:gravity="center_horizontal"
            android:text="探索"
            android:textColor="@drawable/textcolor"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_person"
            android:gravity="center_horizontal"
            android:text="个人"
            android:textColor="@drawable/textcolor"
            android:textSize="10sp" />
    </RadioGroup>

</LinearLayout>